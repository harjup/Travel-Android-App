<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <TableLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/component_bottom_margin">

                <Button
                        android:id="@+id/backButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="@string/back_button"/>

                <Button
                        android:id="@+id/clearButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/clear_button"/>

            </TableRow>


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:id="@+id/purchaseNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/component_bottom_margin"
                        android:hint="@string/purchase_name_hint"
                        android:layout_weight="1"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:id="@+id/purchaseDateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/component_bottom_margin"
                        android:layout_weight="1"
                        android:hint="@string/purchase_date_hint"
                        android:inputType="datetime"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Spinner
                        android:id="@+id/purchaseCurrencySpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <EditText
                        android:id="@+id/purchasePriceEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/component_bottom_margin"
                        android:hint="@string/purchase_price_hint"
                        android:layout_weight="2"
                        android:paddingTop="20dp"
                        android:gravity="end" android:inputType="numberDecimal"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/purchaseNotesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:inputType="textMultiLine"
                        android:layout_weight="1"
                        android:lines="10"
                        android:background="#eceebf"
                        android:hint="@string/purchase_notes_hint"
                        android:textColor="#3a3613" android:gravity="top" android:linksClickable="false"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/cameraButton"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:text="@string/camera_button"/>

                <Button
                    android:id="@+id/albumButton"
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="wrap_content"
                    android:text="@string/album_button"/>

                <Button
                        android:id="@+id/saveButton"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/save_button"/>


            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/purchasePhotoButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="TEST"
                        android:layout_height="wrap_content"
                        android:src="@drawable/photo_button_test"/>


            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>