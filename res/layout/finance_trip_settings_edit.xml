<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/travelDatesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/travel_dates"
            android:textSize="18sp"/>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/component_bottom_margin">

        <TextView
                android:id="@+id/fromTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_text"
                android:layout_weight="1"/>

        <EditText
                android:id="@+id/startDateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/start_date_hint"
                android:layout_weight="1"
                android:inputType="datetime"/>

        <TextView
                android:id="@+id/toTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/to_text"/>

        <EditText
                android:id="@+id/endDateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/end_date_hint"
                android:layout_weight="1"
                android:inputType="datetime"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/component_bottom_margin">

        <Spinner
                android:id="@+id/targetCurrencySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:id="@+id/totalBudgetEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/component_bottom_margin"
                android:hint="@string/total_budget_hint"
                android:layout_weight="2"
                android:paddingTop="20dp"
                android:inputType="numberDecimal"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/component_bottom_margin">

        <TextView
                android:id="@+id/exchangeRateUpdateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/exchangeRateUpdate"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="16sp"/>

        <Spinner
                android:id="@+id/updateFrequencySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/component_bottom_margin">

        <TextView
                android:id="@+id/currentExchangeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18sp"/>

        <Button
                android:id="@+id/updateExchangeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_now_button"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/backButton"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/back_button" tools:ignore="ButtonStyle"/>

        <Button
                android:id="@+id/saveButton"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/save_button" tools:ignore="ButtonStyle"/>

    </TableRow>

</TableLayout>