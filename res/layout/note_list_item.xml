<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:paddingBottom="@dimen/listItemPadding"
                android:paddingTop="@dimen/listItemPadding">

    <TextView android:id="@+id/notes_list_item_timestamp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/note_date_textView"
              android:layout_alignParentRight="true"
              android:padding="4dp" />

    <TextView
            android:id="@+id/notes_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/notes_title"
            android:textStyle="bold" />

</RelativeLayout>